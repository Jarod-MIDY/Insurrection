<div {{ attributes }}>
    {% block content %}
        <div>
            {% if not player.game.radianceLimitReached %}
                {{ form_start(form, {
                    attr: {
                        'data-action': 'live#action:prevent',
                        'data-live-action-param': 'save'
                    }
                }) }}
                    {{ form_errors(form) }}
                    {{ form_rest(form) }}
                    <button type="submit" class="button">Valider L'action</button>
                {{ form_end(form) }}
            {% else %}
                <span>
                    Tout les jetons d'éclat on été distribués
                </span>
            {% endif %}
        </div>        
    {% endblock %}
</div>
