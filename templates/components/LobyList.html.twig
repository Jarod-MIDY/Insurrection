<section id="lobyList" class="flex flex-column">
    <h2>Sessions Ouvertes</h2>
    <ul class="game-loby-list">
        {% for game in games %}
            <li class="game-loby-item">
                <span>
                    {{ game.name }}
                </span>
                <span>
                    {{ game.players|length }} / {{ game.maxPlayers }}
                </span>
                <a {{ stimulus_action('modal', 'open') }} 
                class="button" 
                href="{{ path('app_game_join', { game: game.id}) }}">
                    rejoindre
                </a>
            </li>
        {% endfor %}
    </ul>
</section>
